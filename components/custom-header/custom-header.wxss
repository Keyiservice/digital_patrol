.custom-header-container {
  display: flex;
  align-items: flex-end; /* LOGO 垂直居中 */
  justify-content: center; /* 水平居中LOGO */
  padding: 0; /* 移除垂直内边距，实现纯粹居中 */
  width: 100%;
  height: 150px; /* 增加头部高度，使其更显著 */
  background-color: #0d3371; /* 深蓝色背景，参照INDEX.jpeg */
  box-sizing: border-box;
}

.logo-image {
  width: 100%; /* 增加宽度百分比以放大LOGO */
  height: auto; /* 保持宽高比 */
  max-height: 150px; /* 增加最大高度以放大LOGO */
  /* max-width: 100%; */ /* 可选：限制LOGO最大宽度，防止过宽 */
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between; /* 让内容上下分散 */
  padding: 200rpx 0;
  box-sizing: border-box;
} 