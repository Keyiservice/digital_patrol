/* register.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0 40rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
}

/* 头部logo区域 */
.header {
  width: 100%;
  height: 120rpx;
  background-color: #F5F5F5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 -40rpx 60rpx -40rpx;
}

.logo {
  width: 200rpx;
  height: 60rpx;
}

/* 页面标题 */
.title-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 80rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 4rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
  font-family: Arial, sans-serif;
  text-align: center;
}

/* 表单区域 */
.form-section {
  flex: 1;
  margin-bottom: 60rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  color: #0d3371;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  text-align: center;
  text-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.1);
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f4f4;
  border-radius: 10rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  font-family: Arial, sans-serif;
  font-weight: bold;
  text-align: center;
}

.form-input:focus {
  border-color: #0d3371;
  background-color: #fff;
  text-align: center;
}

.form-input::placeholder {
  color: #999;
}

/* 按钮区域 */
.button-section {
  margin-bottom: 450rpx;
}

.signup-btn {
  width: 100%;
  height: 80rpx;
  background-color: #0d3371;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  border-radius: 15rpx;
  letter-spacing: 3rpx;
  box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.3);
  font-family: Arial, sans-serif;
  text-align: center;
}

.signup-btn:active {
  background-color: #0d3371;
  transform: translateY(2rpx);
}

/* 底部链接区域 */
.bottom-section {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 20rpx;
}

.link-text {
  color: #1e3a8a;
  font-size: 26rpx;
  font-weight: 500;
  font-family: Arial, sans-serif;
}

.link-btn {
  color: #1e3a8a;
  font-size: 26rpx;
  font-weight: bold;
  text-decoration: underline;
  font-family: Arial, sans-serif;
}

.link-btn:active {
  opacity: 0.7;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 0 30rpx 40rpx 30rpx;
  }
  
  .header {
    margin: 0 -30rpx 50rpx -30rpx;
  }
  
  .title {
    font-size: 70rpx;
  }
  
  .form-label {
    font-size: 26rpx;
  }
  
  .form-input {
    height: 70rpx;
    font-size: 26rpx;
    padding: 0 25rpx;
  }
  
  .signup-btn {
    height: 70rpx;
    font-size: 28rpx;
  }
  
  .link-text, .link-btn {
    font-size: 24rpx;
  }
}

/* 全局字体设置 */
page {
  font-family: Arial, sans-serif;
  font-weight: bold;
}

.register-title {
  font-family: Arial, sans-serif;
  font-weight: bold;
}

.input-group input {
  font-family: Arial, sans-serif;
  font-weight: bold;
}

.register-btn {
  font-family: Arial, sans-serif;
  font-weight: bold;
}

.login-link {
  font-family: Arial, sans-serif;
  font-weight: bold;
}