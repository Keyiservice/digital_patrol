/* 全局页面样式设置 */
page {
  font-family: Arial, sans-serif;
  font-weight: bold;
  background-color: #f5f5f5;
}

/* 主容器样式 */
.container {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 头部logo区域 */
.header {
  width: 90%;
  height: 0rpx;
  background-color: #F5F5F5;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 0rpx;
}

/* Logo图片样式 */
.logo {
  width: 200rpx;
  height: 60rpx;
}

/* 页面标题区域 */
.page-title {
  text-align: center;
  margin-bottom: 20rpx;
}

/* 主标题文本样式 */
.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
  margin-bottom: 5rpx;
  font-family: Arial, sans-serif;
}

/* 副标题文本样式 */
.sub-title-text {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  margin-bottom: 20rpx;
}

/* 表单区域样式 */
.form-section {
  flex: 1;
  margin-bottom: 120rpx;
  width: 100%;
}

/* 表单项样式 */
.form-item {
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
  padding: 25rpx;
  box-sizing: border-box;
  min-height: 120rpx;
}

/* 表单标签样式 */
.form-label {
  display: block;
  color: #0d3371;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
}

/* Picker样式 */
.picker-box {
  width: 100%;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  padding: 20rpx;
  box-sizing: border-box;
}

.picker-content {
  width: 100%;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 1rpx;
}

/* 拍照容器样式 */
.photo-container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 10rpx;
}

/* 拍照按钮样式 */
.photo-button {
  background-color: #0d3371;
  color: #ffffff;
  border-radius: 10rpx;
  padding: 15rpx 30rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.2);
}

/* 拍照按钮文本样式 */
.photo-text {
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

/* 照片预览容器样式 */
.photo-preview {
  width: 100%;
  margin-top: 10rpx;
  display: flex;
  justify-content: center;
}

/* 预览图片样式 */
.preview-image {
  width: 300rpx;
  height: 200rpx;
  border-radius: 10rpx;
  border: 2rpx solid #ddd;
  background-color: #f9f9f9;
}

/* 单选按钮组容器样式 */
.radio-group-container {
  padding: 10rpx 0 10rpx 0;
  overflow: visible;
  margin-top: 10rpx;
}

/* 单选按钮组样式 */
.radio-group {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 单选按钮标签样式 */
.radio-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

/* 单选按钮文本样式 */
.radio-text {
  margin-left: 10rpx;
}

/* 底部按钮区域样式 */
.bottom-section {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  background-color: #f5f5f5;
  z-index: 100;
  align-items: center;
}

/* 导航按钮样式 */
.nav-btn {
  width: 45%;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  border: none;
  letter-spacing: 3rpx;
  font-family: Arial, sans-serif;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 退出按钮样式 */
.exit-btn {
  background-color: #777;
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 保存按钮样式 */
.save-btn {
  background-color: #0d3371;
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.3);
} 