/* pages/appearance_second/appearance_second.wxss */
/* 全局页面样式设置 */
page {
  font-family: Arial, sans-serif;
  font-weight: bold;
  background-color: #f5f5f5; /* 设置统一的浅灰色背景 */
}

/* 主容器样式 */
.container {
  min-height: 100vh; /* 确保最小高度占满整个视口 */
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between; /* 内容区域和底部按钮分别位于两端 */
  padding: 0rpx 20rpx; /* 左右两侧留出20rpx的内边距 */
  box-sizing: border-box;
  background-color: #f5f5f5; /* 与页面背景色保持一致 */
}

/* 头部logo区域 - 当前设置为隐藏状态 */
.header {
  width: 90%;
  height: 0rpx; /* 设置为0以隐藏头部区域 */
  background-color: #F5F5F5;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 0rpx;
}

/* Logo图片样式 */
.logo {
  width: 200rpx;
  height: 60rpx;
}

/* 页面标题区域 */
.page-title {
  text-align: center;
  margin-bottom: 20rpx;
}

/* 主标题文本样式 */
.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371; /* 深蓝色标题 */
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1); /* 添加轻微阴影效果 */
  margin-bottom: 5rpx;
  font-family: Arial, sans-serif;
}

/* 副标题文本样式 */
.sub-title-text {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  margin-bottom: 20rpx;
}

/* 表单区域样式 */
.form-section {
  flex: 1; /* 占据剩余空间 */
  margin-bottom: 0rpx; /* 移除底部外边距 */
  width: 100%;
}

/* 检查项目卡片样式 */
.inspection-item {
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1); /* 添加轻微阴影效果 */
  margin-bottom: 10rpx; /* 项目之间的间距 */
  padding: 25rpx;
  box-sizing: border-box;
}

/* 检查内容框样式 */
.inspection-content-box {
  background-color: #fce4ec; /* 浅粉色背景 */
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 25rpx;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  display: flex;
  align-items: flex-start;
}

/* 项目编号样式 */
.item-number {
  font-weight: bold;
  color: #0d3371;
  margin-right: 10rpx;
  flex-shrink: 0; /* 防止编号被压缩 */
  font-size: 32rpx;
}

/* 项目描述文本样式 */
.item-description {
  flex-grow: 1; /* 占据剩余空间 */
  font-size: 32rpx;
}

/* 结果和照片行布局 */
.result-photo-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
}

/* 结果区域和照片区域的共同样式 */
.result-section,
.picture-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 结果区域特定样式 */
.result-section {
  flex: 1;
  margin-right: 20rpx;
  align-items: flex-start;
}

/* 结果标签和照片标签的共同样式 */
.result-label,
.picture-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #0d3371;
  margin-bottom: 0rpx;
  text-align: left;
  width: 100%;
}

/* 单选按钮组样式 */
.radio-group {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 15rpx; /* 按钮之间的间距 */
  width: 100%;
  margin-top: 10rpx;
}

/* 单选按钮标签样式 */
.radio-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

/* 照片区域特定样式 */
.picture-section {
  flex: 1;
  align-items: flex-start;
}

/* 照片组容器样式 */
.photo-group-container {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 10rpx;
  width: 100%;
  margin-top: 10rpx;
}

/* 拍照按钮样式 */
.photo-button {
  width: 200rpx;
  height: 60rpx;
  background-color: #fae3d9; /* 浅橙色背景 */
  color: #0d3371;
  border: 2rpx solid #e0c2b2;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
}

/* 拍照按钮文本样式 */
.photo-text {
  font-size: 28rpx;
}

/* 照片预览容器样式 */
.photo-preview-container {
  width: 66rpx;
  height: 50rpx;
  border-radius: 10rpx;
  border: 2rpx solid #ddd;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 照片图片样式 */
.item-photo {
  width: 100%;
  height: 100%;
}

/* 底部按钮区域样式 */
.bottom-section {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: fixed; /* 固定在屏幕底部 */
  bottom: 0;
  left: 0;
  height: 100rpx;
  background-color: #f5f5f5;
  z-index: 100;
  align-items: center;
}

/* 导航按钮样式 */
.nav-btn {
  width: 45%;
  background-color: #0d3371;
  color: #F5F5F5;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  border: none;
  letter-spacing: 3rpx;
  box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.3);
  font-family: Arial, sans-serif;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 上一页按钮样式 */
.previous-btn {
  margin-right: auto;
}

/* 下一页按钮样式 */
.next-btn {
  margin-left: auto;
}

/* 响应式适配样式 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 0 10rpx 120rpx 10rpx; /* 调整底部填充以适应固定底部按钮 */
  }
  
  .header {
    margin: 0 -30rpx 0rpx -30rpx;
  }
  
  .title-text {
    font-size: 70rpx;
  }
  
  .sub-title-text {
    font-size: 30rpx;
  }
  
  .inspection-content-box {
    font-size: 26rpx;
  }
  
  .item-number,
  .item-description {
    font-size: 28rpx;
  }
  
  .result-label,
  .picture-label {
    font-size: 28rpx;
  }
  
  .radio-label {
    font-size: 26rpx;
  }
  
  .photo-button {
    width: 180rpx;
    height: 55rpx;
    font-size: 26rpx;
  }
  
  .photo-text {
    font-size: 24rpx;
  }
  
  .photo-preview-container {
    width: 60rpx; /* 缩小到约1/3 */
    height: 45rpx; /* 缩小到约1/3 */
  }
  
  .nav-btn {
    height: 70rpx;
    font-size: 28rpx;
  }
  
  .photo-group-container {
    gap: 8rpx; /* 响应式元素间距 */
  }
}

