/* 全局设定 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.container {
  padding-bottom: 180rpx;
}

/* 标题 */
.page-title {
  text-align: center;
  margin: 20rpx 0;
}
.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371;
}
.sub-title-text {
  display: block;
  font-size: 38rpx;
  color: #0d3371;
  margin-top: 10rpx;
}

/* 记录列表 */
.records-scroll {
  width: 100%;
  height: calc(100vh - 280rpx); /* Adjusted height since filters are removed */
  padding-bottom: 50rpx;
}
.record-card {
  background-color: #fff;
  border-radius: 10rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.project-text {
  font-weight: bold;
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 70%;
}
.date-text {
  font-size: 26rpx;
  color: #888;
}
.no-records {
  text-align: center;
  color: #999;
  padding-top: 100rpx;
}

/* 底部按钮 */
.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background-color: #f7f7f7;
  border-top: 1px solid #ddd;
}
.action-button {
  width: 45%;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.actions .add-btn {
  background-color: #0d3371;
  color: white;
}
.actions .back-btn {
  background-color: #f0f0f0;
  color: #333;
}
