:root {
  --primary-color: #0d3371;
  --danger-color: #e53935;
  --edit-color: #ffb300;
}

page {
  font-family: Arial, sans-serif;
  font-weight: bold;
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.page-title {
  text-align: center;
  margin-bottom: 20rpx;
}

.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: var(--primary-color);
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
  margin-bottom: 5rpx;
  font-family: Arial, sans-serif;
}

.sub-title-text {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: var(--primary-color);
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  margin-bottom: 20rpx;
}

.form-container {
  height: calc(100vh - 220rpx);
  padding: 0 10rpx 150rpx 10rpx;
}

.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 25rpx;
  box-sizing: border-box;
  min-height: 100rpx;
}

.form-label {
  width: 180rpx;
  color: var(--primary-color);
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
}

.disabled {
  opacity: 1;
  background-color: #f9f9f9 !important;
  color: #333;
  pointer-events: none;
}

.form-input {
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
}

.form-textarea {
  flex: 1;
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
}


.photos-section {
  flex-direction: column;
  align-items: flex-start;
}

.photos-container {
  width: 100%;
  margin-top: 20rpx;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 10rpx;
}

.photo-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.photo-preview {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border: 2rpx solid #ddd;
}

.bottom-section {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  background-color: #f5f5f5;
  z-index: 100;
  align-items: center;
}

.nav-btn {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  border: none;
  letter-spacing: 3rpx;
  font-family: Arial, sans-serif;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
  margin: 0 10rpx;
}

.exit-btn {
  background-color: #777;
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.edit-btn {
  background-color: var(--edit-color);
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(255, 179, 0, 0.3);
}

.delete-btn {
  background-color: var(--danger-color);
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(229, 57, 53, 0.3);
}
