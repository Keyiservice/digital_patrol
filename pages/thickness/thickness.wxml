<!--pages/thickness/thickness.wxml-->
<custom-header />
<view class="container">
  <!-- 用户信息区域 -->
  <user-info />
  
  <!-- 头部logo区域 -->
  <view class="header">
    <!-- <image class="logo" src="/images/logo.png" mode="aspectFit"></image> -->
  </view>
  
  <!-- 页面标题 -->
  <view class="page-title">
    <text class="title-text">THICKNESS CHECK</text>
  </view>
  
  <!-- 表单区域 -->
  <view class="form-section">
    <!-- 厚度检查点 -->
    <view class="form-item">
      <text class="form-label">POINT 1 (mm)</text>
      <input class="input-field" type="digit" placeholder="请输入厚度值" bindinput="onPoint1Input" value="{{point1}}" />
    </view>
    
    <view class="form-item">
      <text class="form-label">POINT 2 (mm)</text>
      <input class="input-field" type="digit" placeholder="请输入厚度值" bindinput="onPoint2Input" value="{{point2}}" />
    </view>
    
    <view class="form-item">
      <text class="form-label">POINT 3 (mm)</text>
      <input class="input-field" type="digit" placeholder="请输入厚度值" bindinput="onPoint3Input" value="{{point3}}" />
    </view>
    
    <view class="form-item">
      <text class="form-label">POINT 4 (mm)</text>
      <input class="input-field" type="digit" placeholder="请输入厚度值" bindinput="onPoint4Input" value="{{point4}}" />
    </view>
    
    <view class="form-item">
      <text class="form-label">POINT 5 (mm)</text>
      <input class="input-field" type="digit" placeholder="请输入厚度值" bindinput="onPoint5Input" value="{{point5}}" />
    </view>
  </view>
  
  <!-- 底部按钮 -->
  <view class="bottom-section">
    <button class="nav-btn previous-btn" bindtap="onPrevious">PREVIOUS</button>
    <button class="nav-btn next-btn" bindtap="onNext">NEXT</button>
  </view>
</view> 