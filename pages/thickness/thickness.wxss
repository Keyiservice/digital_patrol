/* pages/thickness/thickness.wxss */
page {
  font-family: Arial, sans-serif;
  font-weight: bold;
}

.container {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 头部logo区域 */
.header {
  width: 90%;
  height: 120rpx;
  background-color: #F5F5F5;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 0rpx;
}

.logo {
  width: 200rpx;
  height: 60rpx;
}

/* 页面标题 */
.page-title {
  text-align: center;
  margin-bottom: 80rpx;
}

.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
  font-family: Arial, sans-serif;
}

/* 表单区域 */
.form-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 40rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  font-size: 32rpx;
  color: #0d3371;
  margin-bottom: 15rpx;
  text-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.1);
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  text-align: center;
  width: 100%;
}

.input-field {
  width: 100%;
  height: 80rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  border-radius: 10rpx;
  background-color: #f8f4f4;
  color: #333;
  font-size: 28rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-family: Arial, sans-serif;
  font-weight: bold;
}

/* 底部按钮区域 */
.bottom-section {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 60rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}

.nav-btn {
  width: 45%;
  background-color: #0d3371;
  color: #F5F5F5;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  border: none;
  letter-spacing: 3rpx;
  box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.3);
  font-family: Arial, sans-serif;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.previous-btn {
  margin-right: auto;
}

.next-btn {
  margin-left: auto;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 0 10rpx 40rpx 10rpx;
  }
  
  .header {
    margin: 0 -30rpx 0rpx -30rpx;
  }
  
  .title-text {
    font-size: 70rpx;
  }
  
  .form-label {
    font-size: 28rpx;
  }
  
  .input-field {
    height: 70rpx;
    font-size: 26rpx;
    padding: 0 10rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .nav-btn {
    height: 70rpx;
    font-size: 28rpx;
  }
} 