/* pages/thickness/thickness.wxss */
/* 全局页面样式设置 */
page {
  font-family: Arial, sans-serif;
  font-weight: bold;
  background-color: #f5f5f5; /* 设置统一的浅灰色背景 */
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 主容器样式 */
.container {
  flex: 1;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0rpx 20rpx; /* 左右两侧留出20rpx的内边距 */
  box-sizing: border-box;
  background-color: #f5f5f5; /* 与页面背景色保持一致 */
}

/* 头部logo区域 - 当前设置为隐藏状态 */
.header {
  width: 90%;
  height: 0rpx; /* 设置为0以隐藏头部区域 */
  background-color: #F5F5F5;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 0rpx;
}

/* Logo图片样式 */
.logo {
  width: 200rpx;
  height: 60rpx;
}

/* 页面标题区域 */
.page-title {
  text-align: center;
  margin-bottom: 20rpx;
}

/* 主标题文本样式 */
.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371; /* 深蓝色标题 */
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1); /* 添加轻微阴影效果 */
  margin-bottom: 5rpx;
  font-family: Arial, sans-serif;
}

/* 副标题文本样式 */
.sub-title-text {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  margin-bottom: 20rpx;
}

/* 表单区域样式 */
.form-section {
  flex: 1;
  width: 100%;
  margin-bottom: 20rpx;
}

/* 表单项样式 */
.form-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin-bottom: 40rpx;
}

/* 表单标签样式 */
.form-label {
  display: block;
  font-size: 32rpx;
  color: #0d3371;
  margin-bottom: 15rpx;
  text-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.1);
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  text-align: center;
  width: 100%;
}

/* 输入框样式 */
.input-field {
  width: 100%;
  height: 80rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  border-radius: 10rpx;
  background-color: #f8f4f4;
  color: #333;
  font-size: 28rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-family: Arial, sans-serif;
  font-weight: bold;
}

/* 底部按钮区域样式 */
.bottom-section {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
}

/* 导航按钮样式 */
.nav-btn {
  width: 45%;
  background-color: #0d3371;
  color: #F5F5F5;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  border: none;
  letter-spacing: 3rpx;
  box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.3);
  font-family: Arial, sans-serif;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

/* 上一步按钮样式 */
.previous-btn {
  margin-right: auto;
}

/* 下一步按钮样式 */
.next-btn {
  margin-left: auto;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 0 10rpx 40rpx 10rpx;
  }
  
  .header {
    margin: 0 -30rpx 0rpx -30rpx;
  }
  
  .title-text {
    font-size: 70rpx;
  }
  
  .form-label {
    font-size: 28rpx;
  }
  
  .input-field {
    height: 70rpx;
    font-size: 26rpx;
    padding: 0 10rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  .nav-btn {
    height: 70rpx;
    font-size: 28rpx;
  }
} 
} 