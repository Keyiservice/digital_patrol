<!--qua-patrol.wxml-->
<custom-header />
<view class="container">
  <!-- 用户信息区域 -->
  <user-info />
  
  <!-- 头部logo区域 -->
  <view class="header">
    <!-- <image class="logo" src="/images/logo.png" mode="aspectFit"></image> -->
  </view>
  
  <!-- 页面标题 -->
  <view class="page-title">
    <text class="title-text">QUA ONLINE PATROL</text>
    <text class="sub-title-text">QUALITATIVE ONLINE PATROL</text>
  </view>
  
  <!-- 选择表单区域 -->
  <view class="form-section">
    <!-- 项目选择 -->
    <view class="selection-item">
      <text class="selection-title">项目选择:</text>
      <view class="selection-options">
        <radio-group class="radio-group" bindchange="onProjectChange">
          <label class="radio-label">
            <radio value="G68" checked="{{projectSelected === 'G68'}}" color="#0d3371" />
            <text>G68</text>
          </label>
          <label class="radio-label">
            <radio value="P71A" checked="{{projectSelected === 'P71A'}}" color="#0d3371" />
            <text>P71A</text>
          </label>
        </radio-group>
      </view>
    </view>

    <!-- 流程选择 -->
    <view class="selection-item">
      <text class="selection-title">流程选择:</text>
      <view class="selection-options">
        <radio-group class="radio-group" bindchange="onProcessChange">
          <label class="radio-label">
            <radio value="BMM" checked="{{processSelected === 'BMM'}}" color="#0d3371" />
            <text>BMM</text>
          </label>
          <label class="radio-label">
            <radio value="FC" checked="{{processSelected === 'FC'}}" color="#0d3371" />
            <text>FC</text>
          </label>
          <label class="radio-label">
            <radio value="ASM" checked="{{processSelected === 'ASM'}}" color="#0d3371" />
            <text>ASM</text>
          </label>
        </radio-group>
      </view>
    </view>

    <!-- 班次选择 -->
    <view class="selection-item">
      <text class="selection-title">班次选择:</text>
      <view class="selection-options">
        <radio-group class="radio-group" bindchange="onShiftChange">
          <label class="radio-label">
            <radio value="day" checked="{{shiftSelected === 'day'}}" color="#0d3371" />
            <text>白班</text>
          </label>
          <label class="radio-label">
            <radio value="night" checked="{{shiftSelected === 'night'}}" color="#0d3371" />
            <text>夜班</text>
          </label>
        </radio-group>
      </view>
    </view>
  </view>
  
  <!-- 底部按钮 -->
  <view class="bottom-section">
    <button class="nav-btn previous-btn" bindtap="onPrevious">PREVIOUS</button>
    <button class="nav-btn next-btn" bindtap="onNext">NEXT</button>
  </view>
</view>