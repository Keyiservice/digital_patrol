<custom-header />
<view class="container">
  <!-- 用户信息区域 -->
  <user-info />
  
  <!-- 头部logo区域 -->
  <view class="header">
    <!-- <image class="logo" src="/images/logo.png" mode="aspectFit"></image> -->
  </view>
  
  <!-- 页面标题 -->
  <view class="page-title">
    <text class="title-text">QUA ONLINE PATROL</text>
  </view>

  <view class="form-section">
    <view class="form-item">
      <view class="label-with-scan">
        <text class="form-label">T-NUMBER</text>
        <image src="/logo/special.png" class="scan-icon" bindtap="onScanTNumber" />
      </view>
      <input class="input-field" type="text" placeholder="请输入或扫描 T-NUMBER" bindinput="onTNumberInput" value="{{tNumber}}" />
    </view>

    <view class="form-item">
      <text class="form-label">COOKIE NUMBER</text>
      <input class="input-field" type="text" placeholder="请输入 COOKIE NUMBER" bindinput="onCookieNumberInput" value="{{cookieNumber}}" />
    </view>
  </view>

  <view class="bottom-section">
    <button class="nav-btn previous-btn" bindtap="onPrevious">PREVIOUS</button>
    <button class="nav-btn next-btn" bindtap="onNext">NEXT</button>
  </view>
</view> 