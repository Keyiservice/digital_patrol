<!--index.wxml-->
<custom-header />
<view class="container">
  
  <!-- 用户信息区域 -->
  <view class="user-info" wx:if="{{isLogin}}">
    <text class="welcome-text">欢迎，{{userName}}</text>
  </view>
  
  <!-- 标题区域 -->
  <view class="title-section">
    <text class="title">DIGITAL PATROL</text>

  </view>
  
  <!-- 功能按钮区域 -->
  <view class="menu-section">
    <button style="width:80vw" class="menu-btn" bindtap="onQUAPatrol" hover-class="menu-btn-hover">QUA ONLINE PATROL</button>
    <button style="width:80vw" class="menu-btn" bindtap="onNPManagement" hover-class="menu-btn-hover">NP MANAGEMENT</button>
    <button style="width:80vw" class="menu-btn" bindtap="onMainPatrol" hover-class="menu-btn-hover">MAIN ONLINE PATROL</button>
    <button style="width:80vw" class="menu-btn" bindtap="onGoTpmList" hover-class="menu-btn-hover">TPM EVIDENCE</button>
    <button style="width:80vw" class="menu-btn" bindtap="onTPM" hover-class="menu-btn-hover">BREAKDOWN RECORD</button>
  </view>
  
  <!-- 底部登录注册区域 -->
  <view class="bottom-section" wx:if="{{!isLogin}}">
    <button class="auth-btn signin-btn" bindtap="onSignIn" hover-class="auth-btn-hover">SIGN IN</button>
    <button class="auth-btn signup-btn" bindtap="onSignUp" hover-class="auth-btn-hover">SIGN UP</button>
  </view>
  
  <!-- 已登录时显示退出登录按钮 -->
  <view class="bottom-section" wx:if="{{isLogin}}">
    <button class="auth-btn logout-btn" bindtap="onLogout" hover-class="auth-btn-hover">LOGOUT</button>
  </view>
</view>