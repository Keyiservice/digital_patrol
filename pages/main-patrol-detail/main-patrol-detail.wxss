/* pages/main-patrol/main-patrol.wxss */
page {
  background-color: #f0f2f5;
  font-family: Arial, sans-serif;
}

/* 扫描页和巡检页的通用容器 */
.scan-page-container, .inspection-page-container {
  background-color: #f0f2f5;
}

/* 扫描部分 */
.scan-section {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 20vh; /* 调整垂直位置 */
}

.scan-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.scan-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.scan-text {
  font-size: 28rpx;
  color: #666;
}

/* 巡检页的标题和信息区 */
.page-title {
  padding: 20rpx 0;
  text-align: center;
  color: #0d3371;
  letter-spacing: 2rpx;
}

.title-text {
  font-size: 50rpx;
  font-weight: bold;
  color: #0d3371;
  display: block;
}

.sub-title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #0d3371;
  display: block;
}

.info-section {
  padding: 30rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e0e0e0;
  margin: 0 20rpx 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.device-info {
  display: flex;
  align-items: baseline;
  margin-bottom: 15rpx;
}

.device-id {
  font-size: 42rpx;
  font-weight: bold;
  color: #333;
  margin-right: 25rpx;
}

.device-name {
  font-size: 30rpx;
  color: #555;
  font-weight: 500;
}

.datetime-display {
  font-size: 28rpx;
  color: #888;
}

/* 可滚动区域 */
.inspection-scroll-area {
  box-sizing: border-box;
}

.inspection-content {
  padding: 0 20rpx;
}

/* 巡检项样式 */
.inspection-item {
  background-color: #ffffff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}
.item-header {
  background-color: #f7f7f7;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.item-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #0d3371;
}
.item-body {
  padding: 30rpx 20rpx;
}
.result-photo-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.result-section {
  display: flex;
  align-items: center;
}
.result-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-right: 20rpx;
}
.radio-group {
  display: flex;
}
.radio-label {
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #333;
}
.picture-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.photo-button {
  background-color: #0d3371;
  color: #ffffff;
  font-size: 26rpx;
  padding: 15rpx 30rpx;
  border-radius: 8rpx;
  margin: 0;
}
.photo-preview-container {
  margin-top: 20rpx;
}
.item-photo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  border: 1rpx solid #ddd;
}
.abnormal-section textarea {
  width: 100%;
  height: 120rpx;
  padding: 15rpx;
  font-size: 28rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
  background-color: #fcfcfc;
}

/* 底部按钮 */
.bottom-section {
  height: 160rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #e0e0e0;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.bottom-section.fixed-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

.btn {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
}
.bottom-section.single-button {
  justify-content: center;
}
.btn.back-btn {
  width: 90%;
  background-color: #e0e0e0;
  color: #333;
}
.btn.cancel {
  width: 45%;
  background-color: #f0f0f0;
  color: #333;
}
.btn.submit {
  width: 45%;
  background-color: #0d3371;
  color: white;
} 