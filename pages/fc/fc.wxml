<!--pages/fc/fc.wxml-->
<custom-header />
<view class="container">
  <!-- 用户信息区域 -->
  <user-info />
  
  <!-- 头部logo区域 -->
  <view class="header">
    <!-- <image class="logo" src="/images/logo.png" mode="aspectFit"></image> -->
  </view>
  
  <!-- 页面标题 -->
  <view class="page-title">
    <text class="title-text">FC INSPECTION</text>
  </view>
  
  <!-- 表单区域 -->
  <view class="form-section">
    <!-- FC检查项目 -->
    <view class="form-item">
      <text class="form-label">SOLDER DEFECT</text>
      <radio-group class="radio-group" bindchange="onSolderDefectChange">
        <view class="radio-item">
          <radio value="ok" color="#0d3371" />
          <text class="radio-text">OK</text>
        </view>
        <view class="radio-item">
          <radio value="ng" color="#0d3371" />
          <text class="radio-text">NG</text>
        </view>
      </radio-group>
    </view>
    
    <view class="form-item">
      <text class="form-label">MISSING COMPONENT</text>
      <radio-group class="radio-group" bindchange="onMissingComponentChange">
        <view class="radio-item">
          <radio value="ok" color="#0d3371" />
          <text class="radio-text">OK</text>
        </view>
        <view class="radio-item">
          <radio value="ng" color="#0d3371" />
          <text class="radio-text">NG</text>
        </view>
      </radio-group>
    </view>
    
    <view class="form-item">
      <text class="form-label">WRONG COMPONENT</text>
      <radio-group class="radio-group" bindchange="onWrongComponentChange">
        <view class="radio-item">
          <radio value="ok" color="#0d3371" />
          <text class="radio-text">OK</text>
        </view>
        <view class="radio-item">
          <radio value="ng" color="#0d3371" />
          <text class="radio-text">NG</text>
        </view>
      </radio-group>
    </view>
    
    <view class="form-item">
      <text class="form-label">DAMAGED COMPONENT</text>
      <radio-group class="radio-group" bindchange="onDamagedComponentChange">
        <view class="radio-item">
          <radio value="ok" color="#0d3371" />
          <text class="radio-text">OK</text>
        </view>
        <view class="radio-item">
          <radio value="ng" color="#0d3371" />
          <text class="radio-text">NG</text>
        </view>
      </radio-group>
    </view>
    
    <view class="form-item">
      <text class="form-label">MISALIGNMENT</text>
      <radio-group class="radio-group" bindchange="onMisalignmentChange">
        <view class="radio-item">
          <radio value="ok" color="#0d3371" />
          <text class="radio-text">OK</text>
        </view>
        <view class="radio-item">
          <radio value="ng" color="#0d3371" />
          <text class="radio-text">NG</text>
        </view>
      </radio-group>
    </view>
  </view>
  
  <!-- 底部按钮 -->
  <view class="bottom-section">
    <button class="nav-btn previous-btn" bindtap="onPrevious">PREVIOUS</button>
    <button class="nav-btn next-btn" bindtap="onNext">NEXT</button>
  </view>
</view> 