/* pages/appearance_first/appearance_first.wxss */
page {
  font-family: Arial, sans-serif;
  font-weight: bold;
}

.container {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 头部logo区域 */
.header {
  width: 90%;
  height: 120rpx;
  background-color: #F5F5F5;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 0rpx;
}

.logo {
  width: 200rpx;
  height: 60rpx;
}

/* 页面标题 */
.page-title {
  text-align: center;
  margin-bottom: 20rpx;
}

.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
  font-family: Arial, sans-serif;
}

/* 表单区域 */
.form-section {
  flex: 1;
  margin-bottom: 40rpx;
  width: 100%;
}

.form-item {
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.form-label {
  display: block;
  color: #0d3371;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 25rpx;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  text-align: center;
  text-shadow: 1rpx 1rpx 2rpx rgba(0,0,0,0.1);
  width: 100%;
}

/* 表单项内容 */
.form-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding: 15rpx;
}

/* Radio按钮组样式 */
.radio-group {
  display: flex;
  justify-content: center;
  width: 100%;
  gap: 120rpx;
  margin-bottom: 30rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio-text {
  font-size: 32rpx;
  color: #333;
  margin-left: 15rpx;
}

/* 底部按钮区域 */
.bottom-section {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 30rpx;
  margin-bottom: 60rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
}

.nav-btn {
  width: 45%;
  background-color: #0d3371;
  color: #F5F5F5;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  border: none;
  letter-spacing: 3rpx;
  box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.3);
  font-family: Arial, sans-serif;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.previous-btn {
  margin-right: auto;
}

.next-btn {
  margin-left: auto;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 0 10rpx 40rpx 10rpx;
  }
  
  .header {
    margin: 0 -30rpx 0rpx -30rpx;
  }
  
  .title-text {
    font-size: 70rpx;
  }
  
  .form-label {
    font-size: 28rpx;
  }
  
  .radio-text {
    font-size: 26rpx;
  }
  
  .nav-btn {
    height: 70rpx;
    font-size: 28rpx;
  }
}

/* 拍照按钮样式 */
.photo-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #0d3371;
  color: white;
  padding: 10rpx 30rpx;
  border-radius: 10rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

.camera-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.photo-text {
  font-size: 26rpx;
}

/* 照片预览样式 */
.item-photo {
  width: 300rpx;
  height: 200rpx;
  margin-top: 10rpx;
  border-radius: 8rpx;
  border: 2rpx solid #ddd;
} 