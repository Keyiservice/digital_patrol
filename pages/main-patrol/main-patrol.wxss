/* pages/main-patrol/main-patrol.wxss */
page {
  font-family: Arial, sans-serif;
  font-weight: bold;
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0; /* 移除容器的左右padding */
  box-sizing: border-box;
  background-color: #f5f5f5;
  padding-bottom: 120rpx; /* 为底部按钮留出空间 */
}

/* 新增：扫码界面样式 */
.scan-section {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
}

.scan-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx;
  border-radius: 30rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.scan-icon {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 40rpx;
}

.scan-text {
  font-size: 32rpx;
  color: #0d3371;
  font-weight: bold;
}

/* 页面标题区域 */
.page-title {
  text-align: center;
  padding: 20rpx 0;
  color: #0d3371;
  letter-spacing: 2rpx;
  margin-bottom: 5rpx;
}

.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371;
}

.sub-title-text {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: #0d3371;
}

/* 新增：日期时间显示样式 */
.datetime-display {
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

/* 巡检区域选择 */
.section-select {
  width: auto; /* 自动宽度 */
  background-color: #fff;
  padding: 20rpx;
  border-radius: 15rpx;
  margin: 0 20rpx 20rpx 20rpx; /* 上下左右外边距 */
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #0d3371;
  margin-bottom: 20rpx;
  display: block;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  padding: 0 20rpx;
  background-color: #f9f9f9;
  font-size: 28rpx;
}

/* 新增：滚动区域样式 */
.inspection-scroll-area {
  flex: 1; /* 占据剩余所有空间 */
  height: 0; /*  设置为0，让flex-grow生效 */
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}

/* 巡检项目卡片样式 */
.inspection-item {
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
  padding: 25rpx;
  box-sizing: border-box;
}

.item-header {
  background-color: #fce4ec; /* 浅粉色背景 */
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 25rpx;
  display: flex;
  align-items: flex-start;
}

.item-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex-grow: 1;
}

.item-body {
  padding: 0 10rpx;
}

.input-row, .select-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #666;
  flex-shrink: 0;
}

.input-field {
  flex: 1;
  height: 70rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-right: 10rpx;
}

.item-unit {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}

.item-select .picker {
  flex: 1;
  width: auto;
}

/* 结果和照片行布局 */
.result-photo-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  width: 100%;
  margin-top: 20rpx;
}

.result-section, .picture-section {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.result-section {
  align-items: flex-start;
}

.picture-section {
  align-items: flex-start;
  margin-left: 20rpx;
}

.result-label, .picture-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #0d3371;
  margin-bottom: 10rpx;
}

.radio-group {
  display: flex;
  align-items: center;
  gap: 30rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.photo-group-container {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 10rpx;
  width: 100%;
}

.photo-button {
  width: 200rpx;
  height: 60rpx;
  background-color: #fae3d9;
  color: #0d3371;
  border: 2rpx solid #e0c2b2;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.photo-preview-container {
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  border: 2rpx solid #ddd;
  overflow: hidden;
}

.item-photo {
  width: 100%;
  height: 100%;
}


/* 异常输入区域 */
.abnormal-section {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.abnormal-input textarea {
  width: 100%;
  height: 150rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.abnormal-level {
  display: flex;
  align-items: center;
}

.abnormal-level-label {
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 底部按钮 */
.bottom-section {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  background-color: #f5f5f5;
  z-index: 100;
}

.btn {
  width: 48%;
  background-color: #0d3371;
  color: #F5F5F5;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: none;
  letter-spacing: 3rpx;
  box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.3);
}

.btn.cancel {
  background-color: #f2f2f2;
  color: #666;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
} 