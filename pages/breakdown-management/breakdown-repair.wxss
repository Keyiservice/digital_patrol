page {
  font-family: Arial, sans-serif;
  font-weight: bold;
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

.page-title {
  text-align: center;
  margin-bottom: 20rpx;
}

.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
  margin-bottom: 5rpx;
  font-family: Arial, sans-serif;
}

.sub-title-text {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  margin-bottom: 20rpx;
}

.form-container {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 200rpx; /* 为固定的按钮区留出空间 */
}

.info-section {
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 25rpx;
  margin-bottom: 30rpx;
}

.form-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #0d3371;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #ebedf0;
  padding-bottom: 15rpx;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  align-items: flex-start;
}

.info-label {
  width: 180rpx;
  color: #666;
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

.info-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
  word-break: break-word;
}

.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 25rpx;
  box-sizing: border-box;
  min-height: 100rpx;
}

.description-item {
  flex-direction: column;
  align-items: flex-start;
  min-height: 250rpx;
}

.switch-item {
  justify-content: space-between;
}

.form-label {
  width: 180rpx;
  color: #0d3371;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
}

.description-item .form-label {
  margin-bottom: 20rpx;
}

.disabled {
  opacity: 0.7;
  background-color: #f5f5f5 !important;
  pointer-events: none;
}

.form-picker {
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
}

.form-input {
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
}

.form-textarea {
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 1rpx solid #e0e0e0;
}

.button-area {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 40rpx;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
  box-sizing: border-box;
  z-index: 100;
}

/* 新增：用于编辑模式下按钮横向排列 */
.button-row-edit {
  display: flex;
  justify-content: space-between;
}

.save-button, .cancel-button, .back-button {
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
  margin: 0; /* 清除默认的 margin */
}

/* 编辑模式下的按钮，占据一半宽度 */
.button-row-edit .save-button,
.button-row-edit .cancel-button {
  flex: 1;
}

.save-button {
  background-color: #0d3371;
  color: white;
  margin-left: 10rpx; /* 按钮间距 */
}

.cancel-button {
  background-color: #f0f0f0;
  color: #333;
  margin-right: 10rpx; /* 按钮间距 */
}

.back-button {
  background-color: #0d3371;
  color: white;
  width: 100%;
} 