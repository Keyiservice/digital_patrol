page {
  font-family: Arial, sans-serif;
  font-weight: bold;
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.page-title {
  text-align: center;
  margin-bottom: 20rpx;
}

.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
  margin-bottom: 5rpx;
  font-family: Arial, sans-serif;
}

.sub-title-text {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  margin-bottom: 20rpx;
}

.form-container {
  height: calc(100vh - 320rpx);
  padding: 0 30rpx 150rpx 30rpx;
}

.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 25rpx;
  box-sizing: border-box;
  min-height: 100rpx;
}

.description-item {
  flex-direction: column;
  align-items: flex-start;
  min-height: 250rpx;
}

.form-label {
  width: 180rpx;
  color: #0d3371;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
}

.description-item .form-label {
  margin-bottom: 20rpx;
}

.disabled {
  opacity: 0.7;
  background-color: #f5f5f5 !important;
  pointer-events: none;
}

.form-picker {
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  border: 1rpx solid #e0e0e0;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
}

.form-input {
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
}

.form-input.disabled {
  background-color: #f5f5f5;
  color: #888;
}

.form-textarea {
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 1rpx solid #e0e0e0;
}

/* 按钮区域 (与 repair/quality 页面统一) */
.button-area {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 40rpx;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
  box-sizing: border-box;
  z-index: 100;
}
.button-row-edit {
  display: flex;
  justify-content: space-between;
}
.save-button, .cancel-button, .back-button {
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
  margin: 0;
}
.button-row-edit .save-button,
.button-row-edit .cancel-button {
  flex: 1;
}
.save-button {
  background-color: #0d3371;
  color: white;
  margin-left: 10rpx;
}
.cancel-button {
  background-color: #f0f0f0;
  color: #333;
  margin-right: 10rpx;
}
.back-button {
  background-color: #0d3371;
  color: white;
  width: 100%;
}

.picker-display {
  width: 100%;
} 