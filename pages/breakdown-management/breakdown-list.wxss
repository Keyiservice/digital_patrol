page {
  font-family: Arial, sans-serif;
  font-weight: bold;
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.page-title {
  text-align: center;
  margin-bottom: 20rpx;
}

.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
  margin-bottom: 5rpx;
  font-family: Arial, sans-serif;
}

.sub-title-text {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  margin-bottom: 20rpx;
}

.filter-section {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}

.filter-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #0d3371;
  margin-right: 15rpx;
}

.filter-picker {
  min-width: 200rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #e0e0e0;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.clear-filter {
  background-color: #f0f0f0;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.list-container {
  flex: 1;
  height: calc(100vh - 450rpx);
}

.empty-tip {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 30rpx;
}

.record-list {
  padding: 10rpx 0;
}

.record-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 25rpx;
  padding: 25rpx;
  position: relative;
  overflow: hidden;
}

.record-content {
  flex: 1;
  margin-right: 20rpx;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.record-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #0d3371;
}

.record-status {
  font-size: 26rpx;
  padding: 5rpx 15rpx;
  border-radius: 30rpx;
  letter-spacing: 2rpx;
}

.status-pending {
  background-color: #ff9800;
  color: white;
}

.status-repaired {
  background-color: #2196f3;
  color: white;
}

.status-completed {
  background-color: #4caf50;
  color: white;
}

.record-detail {
  padding: 5rpx 0;
}

.detail-item {
  display: flex;
  margin-bottom: 10rpx;
  align-items: center;
}

.detail-item.description {
  align-items: flex-start;
}

.detail-label {
  width: 130rpx;
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.description .detail-value {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 400rpx;
}

.record-action {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
}

.delete-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f44336;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
}

.bottom-section {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  background-color: #f5f5f5;
  z-index: 100;
  align-items: center;
}

.nav-btn {
  width: 45%;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  border: none;
  letter-spacing: 3rpx;
  font-family: Arial, sans-serif;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.cancel-btn {
  background-color: #777;
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.save-btn {
  background-color: #0d3371;
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.3);
} 