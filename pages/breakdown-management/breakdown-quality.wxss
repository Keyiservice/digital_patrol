page {
  font-family: Arial, sans-serif;
  font-weight: bold;
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.page-title {
  text-align: center;
  margin-bottom: 20rpx;
}

.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
  margin-bottom: 5rpx;
  font-family: Arial, sans-serif;
}

.sub-title-text {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  margin-bottom: 20rpx;
}

.form-container {
  height: calc(100vh - 320rpx);
  padding: 0 30rpx 150rpx 30rpx;
}

.info-section {
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 25rpx;
  margin-bottom: 30rpx;
}

.form-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #0d3371;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #ebedf0;
  padding-bottom: 15rpx;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  align-items: flex-start;
}

.info-label {
  width: 180rpx;
  color: #666;
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

.info-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
  word-break: break-word;
}

.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 25rpx;
  box-sizing: border-box;
  min-height: 100rpx;
}

.description-item {
  flex-direction: column;
  align-items: flex-start;
  min-height: 250rpx;
}

.photos-section {
  flex-direction: column;
  align-items: flex-start;
}

.photos-container {
  width: 100%;
  margin-top: 20rpx;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 10rpx;
}

.photo-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.photo-preview {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border: 2rpx solid #ddd;
}

.delete-btn {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.add-photo-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  border: 2rpx dashed #bbb;
  background-color: #fafafa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-icon {
  font-size: 80rpx;
  color: #bbb;
  font-weight: bold;
}

.form-label {
  width: 180rpx;
  color: #0d3371;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
}

.description-item .form-label {
  margin-bottom: 20rpx;
}

.photos-section .form-label {
  margin-bottom: 0;
}

.disabled {
  opacity: 0.7;
  background-color: #f5f5f5 !important;
  pointer-events: none;
}

.form-input {
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
}

.form-textarea {
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 1rpx solid #e0e0e0;
}

.bottom-section {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  background-color: #f5f5f5;
  z-index: 100;
  align-items: center;
}

.nav-btn {
  width: 45%;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  border: none;
  letter-spacing: 3rpx;
  font-family: Arial, sans-serif;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.cancel-btn {
  background-color: #777;
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.save-btn {
  background-color: #0d3371;
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.3);
} 