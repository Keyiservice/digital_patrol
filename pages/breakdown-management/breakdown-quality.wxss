page {
  font-family: Arial, sans-serif;
  font-weight: bold;
  background-color: #f5f5f5;
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

.page-title {
  text-align: center;
  margin-bottom: 20rpx;
}

.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
  margin-bottom: 5rpx;
  font-family: Arial, sans-serif;
}

.sub-title-text {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  margin-bottom: 20rpx;
}

.form-container {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx 30rpx 200rpx; /* 底部留出足够空间 */
  box-sizing: border-box;
}

.info-section {
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 25rpx;
  margin-bottom: 30rpx;
}

.form-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #0d3371;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #ebedf0;
  padding-bottom: 15rpx;
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  align-items: flex-start;
}

.info-label {
  width: 180rpx;
  color: #666;
  font-size: 28rpx;
  letter-spacing: 1rpx;
}

.info-value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
  word-break: break-word;
}

.form-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
  width: 100%;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 25rpx;
  box-sizing: border-box;
  min-height: 100rpx;
}

.description-item {
  flex-direction: column;
  align-items: flex-start;
  min-height: 250rpx;
}

.photos-section {
  flex-direction: column;
  align-items: flex-start;
}

.photos-container {
  width: 100%;
  margin-top: 20rpx;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 10rpx;
}

.photo-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.photo-preview {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border: 2rpx solid #ddd;
}

.delete-btn {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.add-photo-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  border: 2rpx dashed #bbb;
  background-color: #fafafa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-icon {
  font-size: 80rpx;
  color: #bbb;
  font-weight: bold;
}

.form-label {
  width: 180rpx;
  color: #0d3371;
  font-size: 32rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
}

.description-item .form-label {
  margin-bottom: 20rpx;
}

.photos-section .form-label {
  margin-bottom: 0;
}

.disabled {
  opacity: 0.7;
  background-color: #f5f5f5 !important;
  pointer-events: none;
}

.form-input {
  flex: 1;
  height: 80rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
}

.form-textarea {
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 1rpx solid #e0e0e0;
}

/* 新增：条码扫描按钮样式 */
.barcode-item {
  display: flex;
  align-items: center;
  width: 100%;
}
.barcode-item .form-input {
  flex: 1;
  min-width: 0;
}
.scan-button {
  flex: 0 0 auto;
  width: 150rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 20rpx;
  padding: 0;
  font-size: 28rpx;
  
  background-color: #0d3371;
  color: white;
  border: none;
  outline: none;
  border-radius: 8rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}
.scan-button::after {
  border: none;
}

.radio-group {
  display: flex;
  align-items: center;
}
.radio-group .radio {
  margin-right: 40rpx;
}

/* 按钮区域 (与 repair 页面统一) */
.button-area {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 40rpx;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
  box-sizing: border-box;
  z-index: 100;
}
.button-row-edit {
  display: flex;
  justify-content: space-between;
}
.save-button, .cancel-button, .back-button {
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  text-align: center;
  margin: 0;
}
.button-row-edit .save-button,
.button-row-edit .cancel-button {
  flex: 1;
}
.save-button {
  background-color: #0d3371;
  color: white;
  margin-left: 10rpx;
}
.cancel-button {
  background-color: #f0f0f0;
  color: #333;
  margin-right: 10rpx;
}
.back-button {
  background-color: #0d3371;
  color: white;
  width: 100%;
} 