/* pages/qua-patrol-list/qua-patrol-list.wxss */
.container {
  padding: 20rpx;
  background-color: #f4f4f4;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 筛选区域 */
.filter-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.filter-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.filter-row:last-child {
  margin-bottom: 0;
}

.filter-input {
  width: 48%;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  text-align: left;
}

.button-row {
  justify-content: space-between;
}

.btn {
  width: 48%; /* 调整宽度以适应 space-between */
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #fff;
  padding: 0;
  margin: 0;
}

.filter-btn {
  background-color: #2c6e49;
}

.reset-btn {
  background-color: #999;
}

/* 记录列表 */
.record-scroll-view {
  height: calc(100vh - 580rpx); /* 根据筛选区域和底部按钮高度调整 */
}

.record-card {
  background-color: #ffffff;
  border-radius: 15rpx;
  margin-bottom: 25rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  width: 100%;
  box-sizing: border-box;
}

.record-card:last-child {
  margin-bottom: 150rpx; /* 为最后一张卡片增加足够的下边距 */
}

.record-card:active {
  transform: scale(0.98);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.process-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.status-text {
  font-size: 28rpx;
  padding: 8rpx 15rpx;
  border-radius: 20rpx;
  color: #fff;
  background-color: #27ae60; /* OK */
}

/* 根据实际逻辑动态改变颜色 */
.status-text.ng {
  background-color: #e74c3c; /* NG */
}

.card-body {
  padding: 20rpx 0;
}

.info-row {
  display: flex;
  font-size: 28rpx;
  color: #555;
  margin-bottom: 15rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  width: 160rpx;
  color: #888;
}

.value {
  flex: 1;
  color: #333;
  word-break: break-all;
}

.card-footer {
  text-align: right;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.date-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
}

/* 底部按钮 */
.bottom-section {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  box-sizing: border-box;
}

.nav-btn {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 10rpx;
  font-size: 34rpx;
  color: #fff;
}

.back-btn {
  background-color: #34495e;
} 