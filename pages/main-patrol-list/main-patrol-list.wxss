/* pages/main-patrol-list/main-patrol-list.wxss */
page {
  background-color: #f5f5f5;
  font-family: Arial, sans-serif;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx; /* 为底部按钮留出空间 */
}

.page-title {
  padding: 30rpx 0;
  text-align: center;
}

.title-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #0d3371;
}

.list-container {
  flex: 1;
  padding: 0 20rpx;
}

.record-item {
  background-color: #fff;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.08);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.record-area {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.record-status {
  font-size: 26rpx;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
  background-color: #e8f5e9; /* 绿色背景 */
  color: #388e3c; /* 绿色文字 */
}

.record-status.abnormal {
  background-color: #ffebee; /* 红色背景 */
  color: #d32f2f; /* 红色文字 */
}

.item-body .info-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.empty-state {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding-top: 200rpx;
}

.bottom-section {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.btn {
  width: 100%;
  background-color: #0d3371;
  color: white;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
} 