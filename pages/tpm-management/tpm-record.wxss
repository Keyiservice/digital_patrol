page {
  font-family: Arial, sans-serif;
  font-weight: bold;
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.page-title {
  text-align: center;
  margin-bottom: 20rpx;
}

.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
  margin-bottom: 5rpx;
  font-family: Arial, sans-serif;
}

.sub-title-text {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  margin-bottom: 20rpx;
}

.form-section {
  flex: 1;
  margin-bottom: 120rpx;
  width: 100%;
}

.form-item {
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
  padding: 25rpx;
  box-sizing: border-box;
  min-height: 100rpx;
}

.form-label {
  display: block;
  color: #0d3371;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
}

.picker-box {
  width: 100%;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  background-color: #f9f9f9;
  padding: 20rpx;
  box-sizing: border-box;
}

.picker-content {
  width: 100%;
  font-size: 30rpx;
  color: #333;
  letter-spacing: 1rpx;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 10rpx;
}

.photo-thumb {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  border: 2rpx solid #ddd;
  background-color: #f9f9f9;
  object-fit: cover;
}

.photo-add {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  border: 2rpx dashed #bbb;
  background-color: #fafafa;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.add-icon {
  font-size: 80rpx;
  color: #bbb;
  font-weight: bold;
}

.bottom-section {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  background-color: #f5f5f5;
  z-index: 100;
  align-items: center;
}

.nav-btn {
  width: 45%;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  border: none;
  letter-spacing: 3rpx;
  font-family: Arial, sans-serif;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.exit-btn {
  background-color: #777;
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.save-btn {
  background-color: #0d3371;
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.3);
}
