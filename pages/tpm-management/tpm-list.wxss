page {
  font-family: Arial, sans-serif;
  font-weight: bold;
  background-color: #f5f5f5;
}

.container {
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.page-title {
  text-align: center;
  margin-bottom: 20rpx;
}

.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 2rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
  margin-bottom: 5rpx;
  font-family: Arial, sans-serif;
}

.sub-title-text {
  display: block;
  font-size: 38rpx;
  font-weight: bold;
  color: #0d3371;
  letter-spacing: 1rpx;
  font-family: Arial, sans-serif;
  margin-bottom: 20rpx;
}

.list-section {
  flex: 1;
  width: 100%;
  padding-bottom: 140rpx;
}

.empty-list {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  padding: 100rpx 0;
  margin: 20rpx 0;
}

.empty-text {
  color: #999;
  font-size: 32rpx;
  letter-spacing: 1rpx;
}

.record-list {
  width: 100%;
}

.record-item {
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
  padding: 25rpx;
  box-sizing: border-box;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 15rpx;
  margin-bottom: 15rpx;
}

.record-title {
  font-size: 32rpx;
  color: #0d3371;
  font-weight: bold;
  letter-spacing: 1rpx;
  max-width: 60%;
}

.record-date {
  font-size: 24rpx;
  color: #666;
  letter-spacing: 0.5rpx;
}

.record-body {
  margin-bottom: 15rpx;
}

.record-detail {
  display: flex;
  margin-bottom: 10rpx;
  align-items: baseline;
}

.detail-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
  min-width: 120rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #555;
  flex: 1;
  word-break: break-word;
}

.photo-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.photo-thumb {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  border: 2rpx solid #ddd;
  background-color: #f9f9f9;
  object-fit: cover;
}

.record-footer {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 15rpx;
}

.record-icons {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}

.icon-box {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  background: #f2f2f2;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

.icon-box:first-child {
  background: #e6f7ff;
  color: #0d3371;
}

.icon-box:nth-child(2) {
  background: #e6ffe6;
  color: #006600;
}

.icon-box:last-child {
  background: #ffebeb;
  color: #cc0000;
}

.icon-text {
  font-size: 24rpx;
  font-weight: 500;
}

.bottom-section {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  background-color: #f5f5f5;
  z-index: 100;
  align-items: center;
}

.nav-btn {
  width: 45%;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0;
  border: none;
  letter-spacing: 3rpx;
  font-family: Arial, sans-serif;
  font-weight: bold;
  text-shadow: 1rpx 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.exit-btn {
  background-color: #777;
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.add-btn {
  background-color: #0d3371;
  color: #FFFFFF;
  box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.3);
}

.search-section {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  justify-content: space-between;
  margin: 15rpx 0 20rpx 0;
  padding: 15rpx 10rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  gap: 10rpx;
}

.filter-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 31%;
  min-width: 180rpx;
}

.filter-label {
  font-size: 24rpx;
  color: #666;
  margin-right: 8rpx;
  width: auto;
  text-align: left;
  white-space: nowrap;
}

.filter-picker {
  flex: 1;
  font-size: 24rpx;
  color: #0d3371;
  background: #fff;
  border-radius: 8rpx;
  padding: 10rpx 15rpx;
  border: 2rpx solid #e0e0e0;
  box-sizing: border-box;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.clear-btn {
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 22rpx;
  background: #f2f2f2;
  color: #666;
  border-radius: 8rpx;
  margin: 0;
}

.picker-container {
  flex: 1;
  width: 100%;
}

/* 调整滚动视图的高度 */
.record-scroll-view {
  height: calc(100vh - 320rpx);
  padding-bottom: 120rpx;
}
