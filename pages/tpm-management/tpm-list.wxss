/* 全局设定 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.container {
  padding-bottom: 180rpx;
}

/* 标题 */
.page-title {
  text-align: center;
  margin: 20rpx 0;
}
.title-text {
  display: block;
  font-size: 55rpx;
  font-weight: bold;
  color: #0d3371;
}
.sub-title-text {
  display: block;
  font-size: 38rpx;
  color: #0d3371;
  margin-top: 10rpx;
}

/* 筛选区域 */
.filter-area {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-bottom: 1px solid #eee;
}
.filter-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.filter-row:last-child {
  margin-bottom: 0;
}
.button-row {
  margin-top: 15rpx;
  justify-content: space-around;
}
.filter-picker, .filter-input {
  flex: 1;
  height: 70rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 15rpx;
  font-size: 28rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.filter-picker + .filter-picker,
.filter-input + .filter-input {
  margin-left: 15rpx;
}
.picker-display, .date-picker {
  color: #333;
}
.picker-display[value=""], .date-picker:empty {
  color: #888;
}
.filter-button, .reset-button {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
}
.filter-button {
  background-color: #0d3371;
  color: white;
  margin-right: 10rpx;
}
.reset-button {
  background-color: #f0f0f0;
  color: #333;
  margin-left: 10rpx;
}

/* 记录列表 */
.records-scroll {
  width: 100%;
  height: calc(100vh - 480rpx);
  padding-bottom: 50rpx; /* 增加一个底部内边距，防止内容被遮挡 */
}
.record-card {
  background-color: #fff;
  border-radius: 10rpx;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2px 5px rgba(0,0,0,0.1);
}
.card-header {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 15rpx;
  margin-bottom: 15rpx;
}
.project-text {
  font-weight: bold;
  font-size: 32rpx;
}
.date-text {
  font-size: 26rpx;
  color: #888;
}
.card-body .detail-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.photo-list {
  display: flex;
  flex-wrap: wrap;
}
.photo-thumb {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.card-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
}
.card-btn {
  background-color: #eee;
  font-size: 26rpx;
  padding: 5rpx 20rpx;
  margin-left: 15rpx;
}
.delete-btn {
  background-color: #f44336;
  color: white;
}
.no-records {
  text-align: center;
  color: #999;
  padding-top: 100rpx;
}

/* 底部按钮 */
.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background-color: #f7f7f7;
  border-top: 1px solid #ddd;
}
.action-button {
  width: 45%;
  height: 80rpx;
  font-size: 32rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.actions .add-btn {
  background-color: #0d3371;
  color: white;
}
.actions .back-btn {
  background-color: #f0f0f0;
  color: #333;
}
