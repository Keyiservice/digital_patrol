/* 复用 tsv-report 的部分样式 */
@import "./tsv-report.wxss";

/* 详情页特定样式 */
.detail-group {
  padding: 10rpx 40rpx;
  background-color: #fff;
}
.detail-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  font-size: 30rpx;
}
.detail-item:last-child {
  border-bottom: none;
}
.label {
  width: 240rpx;
  color: #888;
}
.value {
  flex: 1;
  color: #333;
  word-break: break-all;
}
.danger-value-yes {
  color: #e64340;
  font-weight: bold;
}

.detail-group-long {
  padding: 30rpx 40rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}
.label-long {
  color: #888;
  font-size: 28rpx;
  margin-bottom: 15rpx;
}
.value-long {
  color: #333;
  font-size: 30rpx;
  line-height: 1.6;
  padding: 20rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  min-height: 100rpx;
}
.photos-container {
  padding: 30rpx 40rpx;
  background-color: #fff;
}
.photo-list {
  display: flex;
  flex-wrap: wrap;
}
.photo-preview {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}
.no-photo-tip {
  color: #aaa;
  font-size: 28rpx;
}

.bottom-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #f7f7f7;
  padding: 20rpx 40rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  border-top: 1rpx solid #e0e0e0;
}
.nav-btn {
  background-color: #0d3371;
  color: #fff;
  font-weight: bold;
}
